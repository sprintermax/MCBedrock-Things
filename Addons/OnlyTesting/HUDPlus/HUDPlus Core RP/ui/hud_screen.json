{
  "hud_screen": {
    "$screen_bg_content": "hudplus_common.hudp_custom_panels",
    "$background_animations": []
  },

  "hud_content": {
    "bindings": [
      { "binding_name": "#hud_title_text_string" },
      {
        "binding_type": "view",
        "source_property_name": "(not ('%.11s' * #hud_title_text_string = '_hud+:noui:'))",
        "target_property_name": "#visible"
      }
    ]
  },

  "chat_label": {
    "modifications": [
      {
        "array_name": "bindings",
        "operation": "insert_back",
        "value": [
          {
            "binding_type": "view",
            "source_property_name": "(not ('%.6s' * #text = '_hud+:'))",
            "target_property_name": "#visible"
          }
        ]
      }
    ]
  },

  "hud_title_text": {
    "bindings": [
      { "binding_name": "#hud_title_text_string" },
      {
        "binding_type": "view",
        "source_property_name": "(not ('%.6s' * #hud_title_text_string = '_hud+:'))",
        "target_property_name": "#visible"
      }
    ]
  }


{
  "namespace": "npcplus_bottom_action",

  "screen_content": {
    "type": "panel",
    "controls": [
      {
        "menu_screen": {
          "type": "panel",
          "size": ["60%", "75px"],
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
          "offset": [0, "-25px"],
          "controls": [
            { "close_button@npc_interact.close_button_holder": {} },
            {
              "screen_content@common_dialogs.main_panel_no_buttons": {
                "$show_close_button": false,
                "$title_panel": "common_dialogs.standard_title_label",
                "$title_size": ["100% - 14px", 10],
                "$text_name": "#title_text",
                "$title_text_binding_type": "global",
                "$child_control": "npcplus_bottom_action.dialog_content",
                "layer": 2
              }
            }
          ]
        }
      },
      {
        "close_helper@npc_interact.close_text": {
          "anchor_to": "bottom_left",
          "anchor_from": "bottom_left",
          "offset": [20, 0]
        }
      }
    ]
  },

  "dialog_content": {
    "type": "panel",
    "size": ["100%", "100%"],
    "clips_children": true,
    "layer": 1,
    "controls": [
      {
        "dialog_message": {
          "type": "label",
          "text_alignment": "center",
          "size": ["100%", "default"],
          "anchor_from": "center",
          "anchor_to": "center",
          "offset": [0, -10],
          "text": "#newdialogtext",
          "bindings": [
            {
              "binding_name": "#dialogtext"
            },
            {
              "binding_type": "view",
              "source_property_name": "(#dialogtext - $dialog_prefix)",
              "target_property_name": "#newdialogtext"
            }
          ]
        }
      },
      {
        "student_buttons": {
          "type": "stack_panel",
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
          "orientation": "horizontal",
          "size": ["100%", "20px"],
          "collection_name": "student_buttons_collection",
          "controls": [
            {
              "button_0@npcplus_common.student_button": {
                "size": ["fill", "100%"],
                "collection_index": 0
              }
            },
            {
              "button_1@npcplus_common.student_button": {
                "size": ["fill", "100%"],
                "collection_index": 1
              }
            },
            {
              "button_2@npcplus_common.student_button": {
                "size": ["fill", "100%"],
                "collection_index": 2
              }
            },
            {
              "button_3@npcplus_common.student_button": {
                "size": ["fill", "100%"],
                "collection_index": 3
              }
            },
            {
              "button_4@npcplus_common.student_button": {
                "size": ["fill", "100%"],
                "collection_index": 4
              }
            },
            {
              "button_5@npcplus_common.student_button": {
                "size": ["fill", "100%"],
                "collection_index": 5
              }
            }
          ]
          //The factory is unused because it use have conflicts with hardcoded collection sizes
          //Action count doesn't work properly when using /dialogue with custom scene files
          /*"factory": {
					"name": "action_item_factory",
			      "control_name": "npcplus_common.student_button"
					},
		      "bindings": [
			      {
				      "binding_name": "#action_count", // need to properly find the #button_count value
				      "binding_name_override": "#collection_length"
            }
          ]*/
        }
      }
    ]
  },

  "bottom_action_screen@common.base_screen": {
    "$screen_content": "npcplus_bottom_action.screen_content",
    "$screen_bg_content": "common.screen_background",
    "$screen_background_alpha": 0.25,
    "$screen_animations": [
      "@common.container_screen_exit_animation_push",
      "@common.container_screen_exit_animation_pop",
      "@common.container_screen_entrance_animation_push",
      "@common.container_screen_entrance_animation_pop",
      "@common.screen_exit_animation_push_fade",
      "@common.screen_exit_animation_pop_fade",
      "@common.screen_entrance_animation_push_fade",
      "@common.screen_entrance_animation_pop_fade"
    ]
  }
}

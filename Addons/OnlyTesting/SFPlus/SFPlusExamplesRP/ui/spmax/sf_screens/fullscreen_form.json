{
  "namespace": "fullscreen_form",

  "screen_content@sfplus_fullscreen_common.dialog_with_divider": {
    "$selector_area_content": "fullscreen_form.selector_area_content",
    "$section_area_content": "fullscreen_form.section_area_content"
  },

  "selector_area_content": {
    "type": "stack_panel",
    "size": ["100%", "100%"],
    "controls": [
      { "content_focus@sfplus_common.content_focus": {} },
      {
        "top_padding": {
          "type": "panel",
          "size": ["100%", 2]
        }
      },
      {
        "message@settings_common.selector_group_label": {
          "text": "spmax.sfplus.wip",
          "text_alignment": "center"
        }
      },
      {
        "middle_padding": {
          "type": "panel",
          "size": ["100%", 2]
        }
      },
      {
        "section_toggle_0@sfplus_fullscreen_common.text_section_toggle_button_base": {
          "$toggle_group_forced_index": 0,
          "$toggle_view_binding_name": "npc_section_toggle0",
          "$button_text": "Section 1"
        }
      },
      {
        "section_toggle_1@sfplus_fullscreen_common.text_section_toggle_button_base": {
          "$toggle_group_forced_index": 1,
          "$toggle_view_binding_name": "npc_section_toggle1",
          "$button_text": "Section 2"
        }
      },
      {
        "section_toggle_2@sfplus_fullscreen_common.text_section_toggle_button_base": {
          "$toggle_group_forced_index": 2,
          "$toggle_view_binding_name": "npc_section_toggle2",
          "$button_text": "Section 3"
        }
      },
      {
        "section_toggle_3@sfplus_fullscreen_common.text_section_toggle_button_base": {
          "$toggle_group_forced_index": 3,
          "$toggle_view_binding_name": "npc_section_toggle3",
          "$button_text": "Section 4"
        }
      },
      {
        "bottom_padding": {
          "type": "panel",
          "size": ["100%", 2]
        }
      }
    ]
  },

  "dialog_with_divider": {
    "type": "panel",
    "$divider_offset|default": ["40%", -3],
    "$divider_size|default": ["4px", "100% + 3px"],
    "$selector_area_size|default": ["40% - 2px", "100%"],
    "$content_area_size|default": ["60% - 2px", "100%"],
    "$show_divider|default": true,
    "controls": [
      {
        "selector_area": {
          "type": "panel",
          "size": "$selector_area_size",
          "$selector_area_content|default": "common.empty_panel",
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "controls": [
            { "selector_content@$selector_area_content": {} }
          ]
        }
      },
      {
        "dialog_divider@common.dialog_divider": {
          "size": "$divider_size",
          "offset": "$divider_offset",
          "visible": "$show_divider",
          "anchor_from": "top_left",
          "anchor_to": "top_middle",
          "layer": 10
        }
      },
      {
        "content_area": {
          "type": "panel",
          "size": "$content_area_size",
          "$section_area_content|default": "common.empty_panel",
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "controls": [
            { "section_content@$section_area_content": {} }
          ]
        }
      }
    ]
  },

  "fullscreen_dialog": {
    "type": "panel",
    "$transparent_background|default": false,
    "$back_button_text|default": "gui.back",
    "controls": [
      { "top_header@fullscreen_top_header": {} },
      {
        "close_helper@common.gamepad_helper_b": {
          "$hide_description": true,
          "offset": [ -2, -3 ],
          "anchor_from": "top_left",
          "anchor_to": "top_left"
        }
      },
      {
        "background_fill_image": {
          "type": "image",
          "ignored": "$transparent_background",
          "texture": "textures/ui/White",
          "color": "$sidebar_bg_color",
          "keep_ratio": false
        }
      }
    ]
  },

  "section_area_content": {
    "type": "stack_panel",
    "size": ["100%", "100%"],
    "controls": [
      { "content_focus@sfplus_common.content_focus": {} },
      {
        "top_padding": {
          "type": "panel",
          "size": ["100%", 2]
        }
      },
      {
        "message_0@settings_common.selector_group_label": {
          "text": "Section 1",
          "text_alignment": "center",
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "npc_section_toggle0",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "message_1@settings_common.selector_group_label": {
          "text": "Section 2",
          "text_alignment": "center",
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "npc_section_toggle1",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "message_2@settings_common.selector_group_label": {
          "text": "Section 3",
          "text_alignment": "center",
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "npc_section_toggle2",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "message_3@settings_common.selector_group_label": {
          "text": "Section 4",
          "text_alignment": "center",
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "npc_section_toggle3",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "bottom_padding": {
          "type": "panel",
          "size": ["100%", 2]
        }
      }
    ]
  },

  "fullscreen_form_screen@sfplus_common.sfplus_screen_base": {
    "$back_button_text": "gui.back",
    "$header_bar_control": "common_store.store_top_bar",
    "$header_safezone_control": "common_store.store_top_bar_filler",
    "$no_safezone_screen_content": "common.screen_background",
    "$safezone_screen_content": "sfplus_fullscreen_common.fullscreen_dialog",
    "$child_control": "fullscreen_form.screen_content",
    "$screen_background_alpha": 0.9
  }
}
